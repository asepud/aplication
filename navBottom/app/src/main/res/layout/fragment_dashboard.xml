<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Dashboard Activity"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
<!--            <TextView-->
<!--                android:layout_width="120dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:text="Keep Santuy"-->
<!--                android:textAlignment="center"-->
<!--                android:textSize="15sp"-->
<!--                android:textColor="#fed"-->
<!--                android:textStyle="bold"-->
<!--                android:gravity="center_horizontal"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_below="@id/textView"/>-->

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="0sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"  />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_outlineradius"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/contact"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/semua"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="semua"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2254"
                android:textStyle="bold"
                android:layout_below="@+id/aktif"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/aktif"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Aktif"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2254"
                android:textStyle="bold"
                android:layout_below="@+id/aktif"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/Following"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Favorit"
                android:textAlignment="center"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="520"
                android:textStyle="bold"
                android:layout_below="@+id/aktif"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_outlineradius">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/keuangan" />

            <TextView
                android:id="@+id/masuk"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Masuk"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/masuk"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="2254"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/keluar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Keluar"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keluar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="2254"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/saldo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Saldo"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saldo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="520"
                android:textAlignment="center"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_outlineradius"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/agenda"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/harian"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Harian"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2254"
                android:textStyle="bold"
                android:layout_below="@+id/harian"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/mingguan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mingguan"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2254"
                android:textStyle="bold"
                android:layout_below="@+id/mingguan"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/bulanan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bulanan"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bulanan"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="-2dp"
                android:gravity="center_horizontal"
                android:text="520"
                android:textAlignment="center"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_outlineradius"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="3dp"
                android:layout_centerVertical="true"
                android:src="@drawable/noted"
                android:layout_marginLeft="3dp" />
            <TextView
                android:id="@+id/day"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Harian"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2254"
                android:textStyle="bold"
                android:layout_below="@+id/day"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/week"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mingguan"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2254"
                android:textStyle="bold"
                android:layout_below="@+id/week"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/month"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bulanan"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/month"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="-2dp"
                android:gravity="center_horizontal"
                android:text="520"
                android:textAlignment="center"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>